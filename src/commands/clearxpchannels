module.exports = {
  name: 'clearxpchannels',
  description: 'Reset XP channel filters so all channels give XP again.',
  async execute(message, args, db) {
    if (!message.member.permissions.has('Administrator')) {
      return message.reply('Only admins can use this command.');
    }

    await db.collection('config').doc('xp').set({
      enabledTextChannels: [],
      enabledVoiceChannels: []
    }, { merge: true });

    message.reply('âœ… XP is now enabled in **all text and voice channels**.');
  }
};
